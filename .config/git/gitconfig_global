[alias]
		# [a]dd[c]ommit[p]ush
	acp     = "!sh -c 'git add . && git commit -am \"quick commit\" && git push'"
	co      = checkout
	cnv     = commit --no-verify
		# empty commit
	empty   = "!git commit --allow-empty --no-verify -m 'empty commit' && git push"
	f       = fetch --all
	st      = stash --include-untracked
	lg      = log --oneline
		# interactive selection for branches
	br      = "!f() { branch=$(git branch | fzf --no-multi | sed 's/^[* ]*//'); [ -n \"$branch\" ] && git checkout \"$branch\"; }; f"

[branch]
    sort = -committerdate

[color]
	# use colors in git commands that are capable of colored output when
	# outputting to the terminal. (this is the default setting in git â‰¥ 1.8.4.)
	ui = auto

[commit]
	# don't include git default commit template
	status = false
	template = ~/.config/git/commit_template.txt

[core]
	editor = vim

[maintenance]
    auto = true
    strategy = incremental

[pull]
	rebase = true

[push]
	autoSetupRemote = true

